{
    "extends": "../../tsconfig.app.json",
    "compilerOptions": {
        "composite": true,
        "noEmit": false,
        "emitDeclarationOnly": true,
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "baseUrl": ".",
        "paths": {
            "@customdash/ui": [
                "../ui/src"
            ],
            "@customdash/ui/*": [
                "../ui/src/*"
            ],
            "@customdash/utils": [
                "../utils/src"
            ],
            "@customdash/utils/*": [
                "../utils/src/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "references": [
        {
            "path": "../ui"
        },
        {
            "path": "../utils"
        }
    ]
}