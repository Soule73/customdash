{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "types": [
      "vite/client",
      "vitest/globals"
    ],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@core/*": [
        "./src/core/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@components/*": [
        "./src/presentation/components/*"
      ],
      "@pages/*": [
        "./src/presentation/pages/*"
      ],
      "@stores/*": [
        "./src/application/stores/*"
      ],
      "@utils/*": [
        "./src/core/utils/*"
      ],
      "@assets/*": [
        "./src/core/assets/*"
      ],
      "@hooks/*": [
        "./src/application/hooks/*"
      ],
      "@type/*": [
        "./src/core/types/*"
      ],
      "@services/*": [
        "./src/data/services/*"
      ],
      "@repositories/*": [
        "./src/data/repositories/*"
      ],
      "@adapters/*": [
        "./src/data/adapters/*"
      ],
      "@validation/*": [
        "./src/core/validation/*"
      ],
      "@data/*": [
        "./src/data/*"
      ],
      "@domain/*": [
        "./src/domain/*"
      ],
      "@infrastructure/*": [
        "./src/infrastructure/*"
      ],
      "@application/*": [
        "./src/application/*"
      ],
      "@customdash/ui": [
        "./packages/ui/src"
      ],
      "@customdash/ui/*": [
        "./packages/ui/src/*"
      ],
      "@customdash/visualizations": [
        "./packages/visualizations/src"
      ],
      "@customdash/visualizations/*": [
        "./packages/visualizations/src/*"
      ],
      "@customdash/utils": [
        "./packages/utils/src"
      ],
      "@customdash/utils/*": [
        "./packages/utils/src/*"
      ]
    }
  },
  "include": [
    "src",
    "packages"
  ]
}